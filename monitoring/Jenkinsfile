pipeline {
    agent any

    environment {
        AWS_REGION = credentials('AWS_REGION')  
        ECR_REPO = credentials('ECR_REPO') 
    }

    stages {
        stage('Checkout Repository') {
            steps {
                script {
                    checkout scm
                }
            }
        }
 
        stage('Get AWS Account ID') {
            steps {
                script {
                    env.AWS_ACCOUNT_ID = sh(script: "aws sts get-caller-identity --query Account --output text", returnStdout: true).trim()
                }
            }
        }

        stage('Login to ECR') {   
            steps {
                script {
                    sh """
                    aws ecr get-login-password --region ${env.AWS_REGION} | docker login --username AWS --password-stdin ${env.AWS_ACCOUNT_ID}.dkr.ecr.${env.AWS_REGION}.amazonaws.com
                    """
                }
            }
        }

        stage('Pull latest images from Docker Hub') {
            steps {
                script {
                    sh """
                    docker pull prom/prometheus:latest
                    docker pull grafana/grafana:latest
                    docker pull prom/node-exporter:latest
                    docker pull grafana/loki:latest
                    docker pull grafana/promtail:latest
                    """
                }
            }
        }

        stage('Tag and Push to ECR') {
            steps {
                script {
                    def images = [
                        ["name": "prometheus", "repo": "prom/prometheus"],
                        ["name": "grafana", "repo": "grafana/grafana"],
                        ["name": "node-exporter", "repo": "prom/node-exporter"],
                        ["name": "loki", "repo": "grafana/loki"],
                        ["name": "promtail", "repo": "grafana/promtail"]
                    ]

                    for (image in images) {
                        def imageRepo = image["repo"]
                        def ecrImage = "${env.AWS_ACCOUNT_ID}.dkr.ecr.${env.AWS_REGION}.amazonaws.com/${imageRepo}:latest"

                        echo "üöÄ Pushing ${imageRepo} to ECR"
                        sh """
                        docker tag ${imageRepo}:latest ${ecrImage}
                        docker push ${ecrImage}

                        # üî• Push ÌõÑ Î∂àÌïÑÏöîÌïú Î°úÏª¨ ECR Ïù¥ÎØ∏ÏßÄ ÏÇ≠Ï†ú
                        docker rmi -f ${ecrImage} || true
                        """
                    }
                }
            }
        }
    }
}
